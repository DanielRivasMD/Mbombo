####################################################################################################

_default:
  @just --list

####################################################################################################

# print justfile
@show:
  bat .justfile --language make

####################################################################################################

# edit justfile
@edit:
  micro .justfile

####################################################################################################
# aliases
####################################################################################################

# build for OSX
osx:
  echo "Building..." && go build -v -o excalibur/mbombo

####################################################################################################

# build for linux
linux OUT:
  echo "Building..." && env GOOS=linux GOARCH=amd64 go build -v -o {{OUT}}

####################################################################################################

# install locally
install:
  echo "Install..." && go install && mv -v "${HOME}/.go/bin/Mbombo" "${HOME}/.go/bin/mbombo"

####################################################################################################

# watch changes
watch:
  watchexec --clear --watch cmd -- 'just install'

####################################################################################################
